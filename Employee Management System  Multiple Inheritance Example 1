#Real-World Example: Employee Management System - Multiple Inheritance number 1

class Employee:
    def __init__(self, name):
        self.name = name

    def get_details(self):
        return f"Employee: {self.name}"


class Salary:
    def __init__(self, salary):
        self.salary = salary

    def get_salary(self):
        return f"Salary: â‚¹{self.salary}"


class Manager(Employee, Salary):
    def __init__(self, name, salary, team_size):
        Employee.__init__(self, name)
        Salary.__init__(self, salary)
        self.team_size = team_size

    def get_full_profile(self):
        return (
            f"{self.get_details()}, "
            f"{self.get_salary()}, "
            f"Team Size: {self.team_size}"
        )


mgr = Manager("Anita", 120000, 8)
print(mgr.get_full_profile())
